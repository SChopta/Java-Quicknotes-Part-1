System.out.println("Hello World");
/*DECLARING VARIABLES AND PRIMITIVES
formatting of declaring variables: function camelCase = value;
all of these are primitives = already in java */

byte myByte = 4;
int myint = 9;
boolean myBool = false;
short myShort = 345;
long myLong = 34343;
double doubleDouble = 34.5;
float thefloat = 45.566f;
char character = 'g';
System.out.println(myByte);
System.out.println(myint);
System.out.println(myBool);
System.out.println(myShort);
System.out.println(myLong);
System.out.println(doubleDouble);
System.out.println(thefloat);
System.out.println(character);
//printing a string:
System.out.println("This is how to print out a string");

/* WHILE LOOPS
 * while this condition meets the requirements the loop will run 
as long as mechanisms (in this case incremental
amounts of 1) will eventually break the loop 
don't forget the brackets!*/ 
int someValue = 5;
while(someValue < 10)
{System.out.println("The value is " + someValue);
someValue = someValue + 1;
}

/* FOR LOOPS
 * step 1: declare variable
 * step 2: set values
 * step 3: set incremental amount
 */
for(int i=0; i < 5; i++)
	System.out.printf("This is a value  of %d\n", i);

/* IF/IF ELSE
 * 
 */
int myInt= 15;
if(myInt > 10)
{System.out.println("Yes it's true!");
	}
else if(myInt >20)
{System.out.println("No it's false!");
}
else {
	System.out.println("None of the Above...");
}

/* IF loop== 5 break otherwise ++ increment until break
 * 
 */
int loop = 0;
while(true) {
	System.out.println("Looping " + loop);
	if(loop ==5) {
	
	
		break;
	}
		loop++;
		System.out.println("Running");
	}

/*GETTING USER INPUT(SCANNER)
 * 
 */
//create scanner input
Scanner input = new Scanner(System.in);
//prompt to enter data
System.out.println("Enter your name here ");
//enter data via scanner input Note: you can also
//put different input types ex: double value = input.nextDouble();
String name =input.nextLine();
//display entered info
System.out.println("Your name is " + name);

//DOWHILE LOOP essentially similar to previous loops
//conditionals are just placed differently
Scanner scanner = new Scanner(System.in);
int value = 0;
do { System.out.println("Enter a number ");
value = scanner.nextInt();
}
while(value !=5);

//SWITCHES are commands that can be used to trigger a response.
System.out.println("Enter a command: ");
String text = input.nextLine();
switch (text) {
case "start":
	System.out.println("Machine started!");
	break;
	default:
		System.out.println("Command not recognized");
}
//ARRAYS
int values = 7;
int[] values1;
values1 = new int[3];//means allocate this integer to the value
System.out.println(values1[0]);
values1[0] = 10;
values1[1] =20;
values1[2] =30;
//always specify/label the arrays and assign values

System.out.println(values1[0]);//list #s starting from 0
System.out.println(values1[1]);
System.out.println(values1[2]);
//print out the values in the array

for(int i=0; i<values1.length; i++)
	System.out.println(values1[i]);
int[] numbers = {5,6,7};
for(int i=0; i<numbers.length; i++)
	System.out.println(numbers[i]);
